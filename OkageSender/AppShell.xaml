<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OkageSender.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OkageSender"
    Shell.FlyoutBehavior="Disabled">

    <TabBar x:Name="AppTabBar">
        <Tab x:Name="HomeTab" Title="Home">
            <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
        <Tab x:Name="GamesTab" Title="Games Library">
            <ShellContent Title="Games Library" ContentTemplate="{DataTemplate local:GamesLibrary}" Route="GamesLibrary" />
        </Tab>
        <Tab x:Name="ELFTab" Title="ELF Library">
            <ShellContent Title="ELF Library" ContentTemplate="{DataTemplate local:ELFLibrary}" Route="ELFLibrary" />
        </Tab>
    </TabBar>
    
</Shell>
